@model List<Post>
@{
    ViewData["Title"] = "Home Page";
}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const city = "Turgutlu"; // Şehri buradan belirleyebilirsiniz
        fetch('/Home/GetWeather', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ city: city })
        })
        .then(response => {
            if (response.ok) {
                return response.json();
            } else {
                return response.text().then(text => { throw new Error(text); });
            }
        })
        .then(data => {
            document.getElementById('weather-result').innerText = "Hava Durumu: " + JSON.stringify(data);
            // Sayfa yenilenmeden önce yönlendirme yapılacak
            setTimeout(function() {
                window.location.href = '/Home/Index';
            }, 1000); // 1 saniye sonra yönlendir
        })
        .catch(error => {
            document.getElementById('weather-result').innerText = "Hata: " + error.message;
        });
    });
</script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // İlk kez ziyaret edildiğini kontrol et
        if (!sessionStorage.getItem('firstVisit')) {
            // Eğer ilk kez ziyaret ediliyorsa, 1 saniye sonra yönlendirme yap
            setTimeout(function() {
                window.location.href = '/Home/Index'; // Yönlendirme
            }, 1000); // 1 saniye bekleme süresi

            // İlk ziyaret olarak işaretle
            sessionStorage.setItem('firstVisit', 'true');
        }
    });
</script>
<div class="text-center">
    @await Component.InvokeAsync("Weather")

    <p>The current exchange rate for 1 USD is: @ViewBag.DollarRate</p>
    




    <h1>Posts</h1>

    <!-- Button to create a new post -->
    <a href="@Url.Action("Create", "Posts")" class="btn btn-primary">Add New Post</a>
    <br /><br />

    <!-- Bootstrap grid -->
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4 d-flex">
                <div class="card w-100 shadow-sm">
                    <div class="card-body">
                        <!-- Post Title with link -->
                        <h5 class="card-title">
                            <a href="@Url.Action("Details", "Posts", new { id = post.Id })">@post.Title</a>
                        </h5>
                        <p class="card-text text-truncate">
                            @post.Content
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

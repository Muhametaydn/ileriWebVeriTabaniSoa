@model IEnumerable<ileriWebVeriTabaniSoa.Models.Like>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Post.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.LikeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LikeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
